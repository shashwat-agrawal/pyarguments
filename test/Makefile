#---------------------------------------------------------------------------
# SETUP
#---------------------------------------------------------------------------
PYTHON3           := /usr/bin/env python3
REPO_LIB          := $(PWD)/../lib
ENV_RUNNER        := /usr/bin/env PYTHONPATH=$(REPO_LIB) PYTHONDONTWRITEBYTECODE=1
PYTHON_RUNNER     := $(ENV_RUNNER) $(PYTHON3)

#---------------------------------------------------------------------------
# FUNCTIONS
#---------------------------------------------------------------------------
define run_with_python
	$(PYTHON_RUNNER) $(1)
endef

#---------------------------------------------------------------------------
# TARGETS
#---------------------------------------------------------------------------
%-py:
	$(call run_with_python, $*)
